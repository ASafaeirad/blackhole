{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "@nx/eslint:lint": {
      "outputs": ["{options.outputFile}"],
      "options": {
        "maxWarnings": 0,
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,spec.ts,vue,tsx,spec.tsx}"]
      }
    },
    "@nx/vite:test": {
      "inputs": ["default", "^production", "{projectRoot}/vite.config.ts"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      }
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.cjs",
        "{projectRoot}/.eslintrc.json"
      ],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production", "{projectRoot}/vite.config.ts"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "spell": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cspell {projectRoot}"
      },
      "inputs": [
        "default",
        "{workspaceRoot}/.cspell.json",
        "{workspaceRoot}/configs/cspell/*.txt"
      ]
    },
    "tsc": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "vue-tsc --project {projectRoot}/tsconfig.lib.json --noEmit"
      },
      "inputs": ["default", "{workspaceRoot}/tsconfig.*.json"]
    },
    "build-storybook": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json",
        "{workspaceRoot}/libs/tools/storybook/src/*.ts",
        "{workspaceRoot}/libs/**/*.stories.@(ts|tsx|mdx)"
      ]
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "!{projectRoot}/.eslintrc.json"
    ],
    "production": [
      "default",
      "!{workspaceRoot}/libs/tools/storybook/**/*",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/.eslintrc.js",
      "!{projectRoot}/.eslintrc.cjs",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/tsconfig.storybook.json"
    ],
    "sharedGlobals": []
  },
  "defaultProject": "web",
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": ["build-storybook"]
      }
    }
  }
}
