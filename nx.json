{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "@nx/eslint:lint": {
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,spec.ts,tsx,spec.tsx}"]
      }
    },
    "@nx/vite:test": {
      "inputs": ["default", "^production", "{projectRoot}/vite.config.ts"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      }
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.cjs",
        "{projectRoot}/.eslintrc.json"
      ],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production", "{projectRoot}/vite.config.ts"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "spell": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm cspell {projectRoot}"
      },
      "inputs": [
        "default",
        "{workspaceRoot}/.cspell.json",
        "{workspaceRoot}/configs/cspell/*.txt"
      ]
    },
    "tsc": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --project {projectRoot}/tsconfig.lib.json --noEmit"
      },
      "inputs": ["default", "{workspaceRoot}/tsconfig.*.json"]
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "!{projectRoot}/.eslintrc.json"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/.eslintrc.js",
      "!{projectRoot}/.eslintrc.cjs"
    ],
    "sharedGlobals": []
  },
  "generators": {
    "@nx/web:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "vitest",
      "e2eTestRunner": "playwright"
    }
  },
  "defaultProject": "web"
}
