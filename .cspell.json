{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "dictionaryDefinitions": [
    {
      "name": "workspace",
      "path": "./configs/cspell/words.txt",
      "addWords": true
    },
    {
      "name": "npm",
      "path": "./configs/cspell/npm-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["workspace", "npm"],
  "ignorePaths": ["node_modules/", "pnpm-lock.yaml"]
}
