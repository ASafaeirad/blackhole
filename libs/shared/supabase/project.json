{
  "name": "supabase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/supabase/src",
  "projectType": "library",
  "tags": ["type:data", "scope:shared"],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --silent dlx supabase start",
        "cwd": "{projectRoot}"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --silent dlx supabase stop",
        "cwd": "{projectRoot}"
      }
    },
    "gen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm supabase gen types typescript --local --schema public >./libs/shared/supabase/src/lib/Database.ts",
          "pnpm eslint ./libs/shared/supabase/src/lib/Database.ts --fix"
        ],
        "parallel": false
      }
    },
    "spell": {},
    "tsc": {}
  }
}
